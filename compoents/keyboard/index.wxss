.mask{
  position: absolute;
  top: 181rpx;
  background-color: rgb(0, 0, 0);
  width: 100%;
  height: 10rpx;
  z-index: -8;
}
text{
  position: relative;
  left: 0;
  top: 0;
}
.keyBoard{
  position: relative;
  width: 100%;
  height: 175rpx;
  margin-top: 185rpx;
  display: flex;
  box-sizing: border-box;
  /* overflow: scroll; */
}
.keyBoard::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.keyBoard .key{
  position: absolute;
  flex-grow: 1;
  height: 85%;
  background-color: #ffffff;
  border-radius: 0 0 6rpx 6rpx;
  border: 1rpx solid rgb(194, 187, 180);
  box-shadow:inset -2rpx -8rpx 3rpx 1rpx rgb(223, 220, 220);
  box-sizing: border-box;
  text-align: center;
  z-index: 1;
  
}
.keyBoard .blackkey{
    width: 4%;
    height: 58%;
    background-color: #000000;
    border: 1rpx solid #ffffff;
    box-sizing: border-box;
    text-align: center;
    position: absolute;
    border-radius: 0 0 8rpx 8rpx;
    box-shadow:inset -3rpx -8rpx 4rpx 1rpx rgb(73, 71, 71);
    z-index: 2;
}
.whiteactive{
  transform: scale(0.95);
  top: -2%;
  box-shadow:inset 5rpx 6rpx 10rpx 1rpx rgb(36, 35, 34);
  border-radius:0 0 11rpx 11rpx;
}
.blackactive{
  transform: scale(0.95);
  top: -1%;
  box-shadow:inset 0rpx -2rpx 4rpx 1rpx rgb(83, 81, 80);
  border-radius:0 0 11rpx 11rpx;
}
.voice{
  color: #ffffff;
  width: 75%;
  margin: 0 auto;
  margin-top: 112rpx;
  border-radius: 6rpx;
  align-items: center;
  background: #409EFF;
}
.standardscaleactive{
  background: rgb(235, 24, 24);
  border-radius: 50%;
}